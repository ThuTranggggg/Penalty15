<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.GUI.GameRoomController">
    <top>
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: lightgray;">
            <Label fx:id="scoreLabel" text="Tỷ số: 0 - 0" style="-fx-font-size: 18px; -fx-text-fill: black;"/>
            <Label fx:id="timerLabel" text="Thời gian còn lại: 15 giây" style="-fx-font-size: 16px; -fx-text-fill: red;"/>
        </VBox>
    </top>
    <center>
        <Pane fx:id="gamePane" prefWidth="600" prefHeight="400">
        </Pane>
    </center>
    <right>
        <VBox spacing="5" prefWidth="200">
            <TextArea fx:id="chatArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
            <TextField fx:id="chatInput" promptText="Nhập tin nhắn"/>
            <Button text="Gửi" onAction="#handleSendChat"/>
        </VBox>
    </right>
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="shootButton" text="Sút" onAction="#handleShoot"/>
            <Button fx:id="goalkeeperButton" text="Chặn" onAction="#handleGoalkeeper"/>
            <Button fx:id="quitButton" text="Thoát Trò Chơi" onAction="#handleQuitGame"/>
        </HBox>
    </bottom>
</BorderPane>
