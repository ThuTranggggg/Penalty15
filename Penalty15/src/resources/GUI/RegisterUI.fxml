<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.GUI.RegisterController"
            style="-fx-background-color: #e0f2fe;">

    <center>
        <StackPane style="-fx-background-color: #e0f2fe;">
            <ScrollPane fitToWidth="true" fitToHeight="true" 
                       style="-fx-background: transparent; -fx-background-color: transparent;"
                       hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                <StackPane>
                    <VBox alignment="CENTER" spacing="0" style="-fx-padding: 40 20;">
                    
                        <!-- GAME TITLE WITH GLOW EFFECT -->
                        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 0 0 20 0;">
                            <Label text="⚽ PENALTY SHOOTOUT" 
                               style="-fx-font-size: 36px; 
                                      -fx-font-weight: bold; 
                                      -fx-text-fill: #0284c7;
                                      -fx-effect: dropshadow(gaussian, rgba(2, 132, 199, 0.4), 15, 0.6, 0, 3);"/>
                            
                            <Label text="MULTIPLAYER FOOTBALL GAME" 
                               style="-fx-font-size: 13px; 
                                      -fx-font-weight: bold; 
                                      -fx-text-fill: #f59e0b;
                                      -fx-letter-spacing: 2px;"/>
                        </VBox>

                        <!-- REGISTER CARD -->
                        <VBox spacing="18" 
                              style="-fx-background-color: white; 
                                     -fx-padding: 35px 40px; 
                                     -fx-background-radius: 20; 
                                     -fx-border-radius: 20;
                                     -fx-border-color: #10b981;
                                     -fx-border-width: 2.5;
                                     -fx-effect: dropshadow(gaussian, rgba(16, 185, 129, 0.25), 20, 0.3, 0, 6);"
                              maxWidth="420" 
                              minWidth="320"
                              alignment="CENTER">

                        <!-- CARD HEADER -->
                        <VBox alignment="CENTER" spacing="6">
                            <Label text="📝 ĐĂNG KÝ TÀI KHOẢN" 
                                   style="-fx-font-size: 24px; 
                                          -fx-font-weight: bold; 
                                          -fx-text-fill: #0284c7;"/>
                            <Label text="Tạo tài khoản mới để tham gia trò chơi" 
                                   style="-fx-font-size: 11px; 
                                          -fx-text-fill: #64748b;
                                          -fx-wrap-text: true;
                                          -fx-text-alignment: center;"/>
                        </VBox>

                        <!-- USERNAME INPUT -->
                        <VBox spacing="6">
                            <Label text="👤 TÊN ĐĂNG NHẬP" 
                                   style="-fx-font-size: 11px; 
                                          -fx-font-weight: bold; 
                                          -fx-text-fill: #1e293b;"/>
                            <TextField fx:id="usernameField" 
                                      promptText="Nhập tên người dùng..."
                                      style="-fx-font-size: 13px; 
                                             -fx-padding: 10px; 
                                             -fx-border-color: #cbd5e1;
                                             -fx-border-width: 2;
                                             -fx-border-radius: 10;
                                             -fx-background-radius: 10;
                                             -fx-background-color: #f8fafc;"/>
                            <Label text="* Tối thiểu 3 ký tự, chỉ chữ, số và dấu _" 
                                   style="-fx-font-size: 10px; 
                                          -fx-text-fill: #64748b;"/>
                        </VBox>

                        <!-- PASSWORD INPUT -->
                        <VBox spacing="6">
                            <Label text="🔒 MẬT KHẨU" 
                                   style="-fx-font-size: 11px; 
                                          -fx-font-weight: bold; 
                                          -fx-text-fill: #1e293b;"/>
                            <PasswordField fx:id="passwordField" 
                                          promptText="Nhập mật khẩu..."
                                          style="-fx-font-size: 13px; 
                                                 -fx-padding: 10px; 
                                                 -fx-border-color: #cbd5e1;
                                                 -fx-border-width: 2;
                                                 -fx-border-radius: 10;
                                                 -fx-background-radius: 10;
                                                 -fx-background-color: #f8fafc;"/>
                            <Label text="* Tối thiểu 6 ký tự" 
                                   style="-fx-font-size: 10px; 
                                          -fx-text-fill: #64748b;"/>
                        </VBox>

                        <!-- CONFIRM PASSWORD INPUT -->
                        <VBox spacing="6">
                            <Label text="🔐 XÁC NHẬN MẬT KHẨU" 
                                   style="-fx-font-size: 11px; 
                                          -fx-font-weight: bold; 
                                          -fx-text-fill: #1e293b;"/>
                            <PasswordField fx:id="confirmPasswordField" 
                                          promptText="Nhập lại mật khẩu..."
                                          style="-fx-font-size: 13px; 
                                                 -fx-padding: 10px; 
                                                 -fx-border-color: #cbd5e1;
                                                 -fx-border-width: 2;
                                                 -fx-border-radius: 10;
                                                 -fx-background-radius: 10;
                                                 -fx-background-color: #f8fafc;"/>
                        </VBox>

                        <!-- ERROR MESSAGE -->
                        <Label fx:id="errorLabel" 
                               text=""
                               style="-fx-text-fill: #ef4444; 
                                      -fx-font-size: 12px; 
                                      -fx-font-weight: bold;
                                      -fx-wrap-text: true;
                                      -fx-text-alignment: center;"/>

                        <!-- SUCCESS MESSAGE -->
                        <Label fx:id="successLabel" 
                               text=""
                               style="-fx-text-fill: #10b981; 
                                      -fx-font-size: 12px; 
                                      -fx-font-weight: bold;
                                      -fx-wrap-text: true;
                                      -fx-text-alignment: center;"/>

                        <!-- REGISTER BUTTON -->
                        <Button text="🚀 ĐĂNG KÝ NGAY" 
                               onAction="#handleRegister"
                               maxWidth="Infinity"
                               prefHeight="42"
                               style="-fx-font-size: 14px; 
                                      -fx-font-weight: bold; 
                                      -fx-background-color: #10b981;
                                      -fx-text-fill: white;
                                      -fx-border-radius: 20;
                                      -fx-background-radius: 20;
                                      -fx-effect: dropshadow(gaussian, rgba(16, 185, 129, 0.35), 10, 0, 0, 3);">
                            <cursor><javafx.scene.Cursor fx:constant="HAND" /></cursor>
                        </Button>

                        <!-- SEPARATOR -->
                        <Separator style="-fx-background-color: #e2e8f0; -fx-padding: 4 0;"/>

                        <!-- BACK TO LOGIN LINK -->
                        <HBox spacing="6" alignment="CENTER">
                            <Label text="Đã có tài khoản?" 
                                   style="-fx-font-size: 12px; 
                                          -fx-text-fill: #64748b;"/>
                            <Hyperlink text="Đăng nhập ngay" 
                                      onAction="#handleBackToLogin"
                                      style="-fx-font-size: 12px; 
                                             -fx-text-fill: #0ea5e9;
                                             -fx-font-weight: bold;
                                             -fx-underline: true;">
                                <cursor><javafx.scene.Cursor fx:constant="HAND" /></cursor>
                            </Hyperlink>
                        </HBox>
                    </VBox>

                    <!-- BOTTOM DECORATION -->
                    <HBox spacing="8" alignment="CENTER" 
                          style="-fx-padding: 12; -fx-background-color: rgba(255, 255, 255, 0.7); -fx-background-radius: 12; -fx-border-radius: 12;"
                          maxWidth="400">
                        <Label text="⚡" style="-fx-font-size: 16px;"/>
                        <Label text="INSTANT ACCESS" 
                               style="-fx-font-size: 10px; 
                                      -fx-font-weight: bold; 
                                      -fx-text-fill: #64748b;"/>
                        <Separator orientation="VERTICAL" prefHeight="12" style="-fx-background-color: #cbd5e1;"/>
                        <Label text="🏆" style="-fx-font-size: 16px;"/>
                        <Label text="COMPETE &amp; WIN" 
                               style="-fx-font-size: 10px; 
                                      -fx-font-weight: bold; 
                                      -fx-text-fill: #64748b;"/>
                        <Separator orientation="VERTICAL" prefHeight="12" style="-fx-background-color: #cbd5e1;"/>
                        <Label text="🌐" style="-fx-font-size: 16px;"/>
                        <Label text="ONLINE MULTIPLAYER" 
                               style="-fx-font-size: 10px; 
                                      -fx-font-weight: bold; 
                                      -fx-text-fill: #64748b;"/>
                    </HBox>
                    </VBox>
                </StackPane>
            </ScrollPane>
        </StackPane>
    </center>

</BorderPane>
