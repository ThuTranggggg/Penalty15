<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" prefWidth="400" prefHeight="300" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.GUI.LoginController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Đăng Nhập" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
    <TextField fx:id="usernameField" promptText="Tên đăng nhập" prefWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Mật khẩu" prefWidth="250"/>
    <Button text="Đăng nhập" onAction="#handleLogin" prefWidth="250"/>
    <Label fx:id="errorLabel" textFill="red"/>
</VBox>
